---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  /* tokens */
  :root {
    --aw-default-font-sans: 'InterVariable';
    --aw-default-font-serif: 'InterVariable';
    --aw-default-font-heading: 'InterVariable';

    /* light default tokens */

    --aw-color-light-primary: rgb(1 97 239);
    --aw-color-light-secondary: rgb(1 84 207);
    --aw-color-light-accent: rgb(109 40 217);
    --aw-color-light-background: rgb(255 255 255);
    --aw-color-light-on-background: rgb(16 16 16);
    --aw-color-light-on-background-muted: rgb(16 16 16 / 66%);

    --aw-color-dark-primary: rgb(1 97 239);
    --aw-color-dark-secondary: rgb(1 84 207);
    --aw-color-dark-accent: rgb(109 40 217);
    --aw-color-dark-background: rgb(3 6 32);
    --aw-color-dark-on-background: rgb(229 236 246);
    --aw-color-dark-on-background-muted: rgb(229 236 246 / 66%);
  }

  /* light theme */

  :root {
    --aw-font-sans: var(--aw-default-font-sans);
    --aw-font-serif: var(--aw-default-font-serif);
    --aw-font-heading: var(--aw-default-font-heading);

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }
  /* dark theme */

  .dark {
    --aw-font-sans: 'InterVariable';
    --aw-font-serif: 'InterVariable';
    --aw-font-heading: 'InterVariable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
