---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Brands from '~/components/widgets/Brands.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Clery Neyra',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    actions={[
      { variant: 'gray', target: '_blank', text: 'Leer Blog', href: '/blog' },
      // { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '/Clery.png',
      alt: 'Clery Neyra',
    }}
  >
    <Fragment slot="title">
      Clery Neyra: <br />
      Transformación con
      <span class="text-accent dark:text-white highlight" style="color: white;">Impacto</span> <br />
    </Fragment>

    <Fragment slot="subtitle">
      Líder en innovación, comprometida con impulsar  la inclusión y la educación en la sociedad.
    </Fragment>
  </Hero2>


  <!-- Features3 Widget ************** -->

  <Features3
    title="Mi propósito"
    subtitle=""
    columns={3}
    defaultIcon="tabler:point-filled"
    items={[
      {
        title: 'Inspirar',
        description: 'Inspirar el cambio a través de la educación, la diversidad y la inclusión',
      },
      {
        title: 'Transformar',
        description: 'Ayudo a organizaciones en sus procesos de transformación digital',
      },
      {
        title: 'Empoderar',
        description: 'Empoderar a personas y organizaciones para alcanzar su máximo potencial',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    id="porfolio"
    isReversed
    items={[
      {
        title: '',
        description:
          'Soy una líder en innovación y mamá,  en constante búsqueda de nuevas formas de innovación y creación de valor en la era digital',
      },
    ]}
    image={{
      src: '/Clery2.png',
      alt: 'Tech Design Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Hola, soy Clery Neyra: <br /><span class="text-2xl">Directora de tecnología e Innovación, con un enfoque centrado en las personas</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


  <!-- Brands Widget ****************** -->

  <Brands
    title="Colaboración"
    subtitle="Organizaciones que he liderado."
    icons={[]}
    images={[
      {
        src: '/upc.png',
        alt: 'UPC',
      },
      {
        src: '/aiep.png',
        alt: 'AIEP',
      },
      {
        src: '/kpmg.png',
        alt: 'KPMG',
      },
      {
        src: '/bcp.png',
        alt: 'BCP',
      },
    ]}
  />


  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Explora insights y artículos"
  />


