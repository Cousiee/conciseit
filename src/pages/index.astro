---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <Hero
    image={{ src: import('~/assets/images/hero.png'), alt: 'Cloudsmart Unlimited DevOps' }}
    callToAction={{ text: 'Sign up now', href: 'https://app.cloudsmart.io'}}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">Unlimited DevOps</span> for
      <span class="text-accent dark:text-white highlight"> Public Cloud</span> and
      <span class="text-accent dark:text-white highlight"> Kubernetes</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Cloudsmart</span> = DevOps engineering for Public Cloud APIs and Kubernetes</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Cloudsmart Unlimited DevOps</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features Widget *************** -->

  <Features
    highlight="Everything as Code"
    title="Your DevOps Code Factory"
    subtitle="Built, tested and released for:"
    items={[
      [
        {
          title: 'Infrastructure as Code (IaC)',
          description:
            'Infrastructure as Code for Azure, Digital Ocean, AWS and GCP including Kubernetes clusters (AKS, DOKS, EKS, GKE respectively)',
          icon: 'tabler:brand-tailwind',
        },
        {
          title: 'Application Modernization',
          description:
            'Containerization for Javascript, Java (and other JVM languages), Go, Python, PHP',
          icon: 'tabler:rocket',
        },
      ],
      [
        {
          title: 'Continuous Integration (CI)',
          description:
            'Build, test and release for your Infrastructure and Containerized Applications',
          icon: 'tabler:arrows-right-left',
        },
        {
          title: 'Continuous Deployment (CD)',
          description:
            'Continuous Deployment of infrastructure changes, Kubernetes resources changes and containerized application (images) releases',
          icon: 'tabler:bulb',
        },
      ],
    ]}
  />

