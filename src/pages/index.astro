---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'PureStream Media - Revolutionizing Online Streaming',
  metaDescription: 'Experience the future of online streaming with PureStream Media. Discover our innovative solutions for a seamless viewing experience.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'View Pricing',
        href: '/pricing',
        icon: 'tabler:list',
        class: 'mx-2',
      },
      { text: 'Learn more', href: '#features', class: 'mx-2' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'PureStream Hero Image' }}
  >
    <Fragment slot="title"> PureStream Media </Fragment>

    <Fragment slot="subtitle" class="mx-4 md:mx-8 mb-2 block w-full">
        <span class="mx-4 md:mx-8 mb-2 block w-full">
          <span class="font-semibold">PureStream Media:</span> A unique advantage in the OTT advertising industry</span>
        <span class="mx-4 md:mx-8 mb-2 block w-full">Target your perfect customer with up to 27,000 filters and maximize visibility and ROI.</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with PureStream"
    subtitle="Unlock the full potential of your ad revenue with PureStream's cutting-edge technology and expert team."
    items={[
      {
        title: 'Advanced Ad Optimization',
        description: `Maximize your ad revenue with PureStream's AI-powered engine, analyzing your traffic and ad inventory to deliver the highest possible returns.`,
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Real-time Reporting and Analytics',
        description:
          'Get instant access to detailed reports and analytics, empowering you to track your ad performance and make data-driven decisions.',
        icon: 'tabler:components',
      },
      {
        title: 'Competitive Revenue Shares',
        description: `Benefit from PureStream's competitive revenue shares, designed to ensure you get the most out of your ad inventory.`,
        icon: 'tabler:coin',
      },
      {
        title: 'Brand Safety and Ad Quality Control',
        description: `Trust PureStream's advanced filtering technology and human moderation team to ensure high-quality, brand-safe ads on your site or app.`,
        icon: 'tabler:rocket',
      },
      {
        title: 'Dedicated Support Team',
        description:
          'Our expert support team is always available to help you with any questions or issues you may have.',
        icon: 'tabler:help',
      },
      {
        title: 'Constant Innovation and Updates',
        description:
          'PureStream is committed to staying at the forefront of ad streaming technology, with new features and updates released regularly.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why PureStream?"
    title="PureStream Media: Taking your ads to the next level"
    items={[
      {
        title: 'Pin point placement',
        description:
          'Benefiting from the performance and developer-friendly features of this modern static site generator.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">The competitors edge</h3>
      We charge over half of the leading competitors.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Unparalleled CPM Pricing',
        description: `PureStream Media offers a unique advantage in the OTT advertising industry: dramatically undercutting existing CPM prices while ensuring optimal ad placement.`,
      },
      {
        title: 'Targeted Ad Placement',
        description:
          'Our ads reach your target audience with precision, whether they are at home, on their mobile device, or on the go.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">Ensure your online presence truly represents you.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"

  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Why PureStream?"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why PureStream?',
        description:
          'Unlock the full potential of your ad revenue with PureStream. Our cutting-edge technology and expert team help you maximize your earnings and reach new heights. Say goodbye to ad revenue uncertainty and hello to a brighter future.',
      },
      {
        title: 'What do I need to start?',
        description:
          'Getting started with PureStream is easy. Simply sign up, integrate our code into your website or app, and start monetizing your traffic. Our dedicated support team is always here to help you every step of the way.',
      },
      {
        title: 'How to optimize my ad placements with PureStream?',
        description:
          "PureStream's advanced ad optimization technology ensures that your ad placements are always performing at their best. Our AI-powered engine analyzes your traffic and ad inventory to deliver the highest possible revenue. Plus, our expert team is always available to provide personalized optimization tips and strategies.",
      },
      {
        title: 'What sets PureStream apart from other ad streaming platforms?',
        description:
          "At PureStream, we're committed to transparency, fairness, and innovation. Our platform is built on a foundation of trust, with clear and concise reporting, competitive revenue shares, and a constant stream of new features and updates. Experience the PureStream difference for yourself.",
      },
      {
        title: 'How does PureStream ensure brand safety and ad quality?',
        description:
          'PureStream takes brand safety and ad quality extremely seriously. Our advanced filtering technology and human moderation team work together to ensure that only high-quality, brand-safe ads are displayed on your site or app. You can trust PureStream to protect your reputation and your users.',
      },
      {
        title: 'What kind of support can I expect from PureStream?',
        description:
          "At PureStream, we're dedicated to providing world-class support to our publishers. From onboarding to optimization, our team is always available to help you succeed. Whether you need technical assistance, ad optimization tips, or simply have a question, we're here to help.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Customers', amount: '132K' },
      { title: 'Stars', amount: '24.8K' },
      { title: 'Ads', amount: '10.3K' },
      { title: 'Users', amount: '48.4K' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'View Pricing',
        href: '/pricing',
        icon: 'tabler:list',
      },
    ]}
  >
    <Fragment slot="title">
      PureStream <br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Media</span>
    </Fragment>

    <Fragment slot="subtitle">
      View our affordable pricing models today or inquire for a custom quote.<br class="hidden md:inline" /> Unlock your
      ad potential today.
    </Fragment>
  </CallToAction>
</Layout>
