---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    title="Pricing That Makes Sense"
    subtitle="Flat pricing based on dataset size. 24/7 support included on all plans. No unexpected charges when you have high traffic periods."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Plans"
    subtitle="Non-commercial self-hosting is free and our hosted service is free up to 10,000 vectors/chunks."
    prices={[
      {
        title: 'dev cloud',
        subtitle: 'Optimal choice for small teams. Ideal for startups and small businesses getting started',
        price: 25,
        period: 'Per Month',
        items: [
          {
            description: '100,000 vectorized and stored chunks',
          },
          {
            description: 'Unlimited search queries at 10/s rate limit',
          },
          {
            description: '2 datasets',
          },
          {
            description: '5 users',
          },
          {
            description: '10,000 gen AI messages',
          },
          {
            description: '1gb S3 file storage',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started free',
          href: 'https://dashboard.trieve.ai',
        },
      },
      {
        title: 'sovereign',
        subtitle: 'Buy a license to host Trieve on your own servers. Ideal for large organizations and agencies',
        price: '500+',
        period: 'Per Month - Starting',
        items: [
          {
            description: 'Terraform templates',
          },
          {
            description: 'Helm charts',
          },
          {
            description: 'Run securely on your own servers or cloud',
          },
          {
            description: 'Multi-tenant so can be used by multiple teams within your organization',
          },
          {
            description: 'Unlimited usage - Do whatever you want besides reselling',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Book Meeting',
          href: 'https://cal.com/nick.k/meet',
        },
        callToAction2: {
          target: '_blank',
          text: 'humans@trieve.ai',
          href: 'mailto:humans@trieve.ai',
        },
        hasRibbon: true,
        ribbonTitle: 'self-host',
      },
      {
        title: 'pro cloud',
        subtitle: 'For mid-sized datasets needing enhanced performance and storage capacity',
        price: 500,
        period: 'Per Month',
        items: [
          {
            description: '1,000,000 vectorized and stored chunks',
          },
          {
            description: 'Unlimited search queries at 25/s rate limit',
          },
          {
            description: '10 datasets',
          },
          {
            description: '20 users',
          },
          {
            description: '10,000 gen AI messages',
          },
          {
            description: '50gb S3 file storage',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started free',
          href: 'https://dashboard.trieve.ai',
        },
      },
      {
        title: 'enterprise cloud',
        subtitle: 'Contracted guarantees for organizations with strict latency and uptime requirements',
        price: '5000+',
        period: 'Per Month - Starting',
        items: [
          {
            description: 'Up to 99.9% uptime SLA',
          },
          {
            description: 'Up to 175ms P95 hybrid search SLO',
          },
          {
            description: '4 hour maximum response time for critical issues',
          },
          {
            description: 'Load your own custom models for embeddings, reranking, and LLM',
          },
          {
            description: 'Unlimited usage',
          },
          {
            description: 'VPC peering',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Book Meeting',
          href: 'https://cal.com/nick.k/meet',
        },
        callToAction2: {
          target: '_blank',
          text: 'humans@trieve.ai',
          href: 'mailto:humans@trieve.ai',
        },
        hasRibbon: true,
        ribbonTitle: 'flagship',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Tiered Pricing Plans',
        description: 'Choose from a range of pricing plans designed to accommodate different budgets and requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'SLA Available',
        description: 'Highest tier plans include a SLA that suits your needs.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Instant Access',
        description: `Immediate access to your chosen plan's features and templates upon subscription.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Upgrade Value',
        description: 'Upgrade to higher-tier plans to unlock more features and benefits for an enhanced experience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24H support',
        description: 'Questions answered via live chat, email or phone, every calendar day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />
  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to experiment?"
    subtitle="Join our community of developers who have transformed their search, recommendations, and RAG."
    actions={[
      {
        variant: 'primary',
        text: 'Get started free',
        href: 'https://dashboard.trieve.ai',
      },
    ]}
  />
</Layout>
